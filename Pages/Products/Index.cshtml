@page
@model SupermarketWEB.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products";  // Título de la página
}

<h1 class="mb-4">Products List</h1>  <!-- Encabezado principal con margen  -->

<!-- Botón para crear nuevo producto -->
   <p>
    <a asp-page="Create" class="btn btn-success btn-sm">Create New Product</a>
   </p>
<!--Tabla de productos -->
<table class="table table-bordered">  <!-- Tabla con bordes  -->
    <thead class="table-light">  
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Category.Id)
            </th> <!-- Columna para acciones -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)  
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Id)
                </td>
                <td>
                    <!-- Botones de acciones -->
                    <a href="#" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>